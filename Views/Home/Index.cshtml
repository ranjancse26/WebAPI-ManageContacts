<header>
    <div class="content-wrapper">
        <div class="float-left">
            <p class="site-title">
                <a href="~/">Contact Manager</a></p>
        </div>
    </div>
</header>

<link rel="stylesheet" href="http://code.jquery.com/ui/1.10.1/themes/base/jquery-ui.css" />
<script src="http://code.jquery.com/jquery-1.9.1.js"></script>
<script src="http://code.jquery.com/ui/1.10.1/jquery-ui.js"></script>
 
<div id="body">
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>Welcome to ASP.NET Web API Contact Manager Sample</h1>
            </hgroup>           
        </div>
    </section>
    <div class="container-fluid">
    <div class="row-fluid">
    </div>
    <div class="row-fluid">
        <div class="span12">
            <form class="form-horizontal">
                <fieldset>
                    <legend>Add new contact</legend>
                    <table>
                        <tr>
                            <td>
                                @Html.Label("Name")
                            </td>
                            <td>
                                @Html.TextBox("Name_Create")
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.Label("Email")
                            </td>
                            <td>
                                @Html.TextBox("Email_Create")
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.Label("Phone")
                            </td>
                            <td>
                                @Html.TextBox("Phone_Create")
                            </td>
                        </tr>
                        <tr>
                            <td></td>
                            <td>
                                 <div class="form-actions">
                                    <input type="button" value="Add Contact" onclick="AddContact(); return false;"/>
                                </div>
                            </td>
                        </tr>
                    </table>   
                </fieldset>
            </form>
        </div>
    </div>
</div>
    <section>
        <div id="contactsGrid"></div>
    </section>   

<div id="editContact"></div>
 
</div>

<script>       
    GetContacts();
    var dialog;

    $(document).ready(function () {
        $('#editContact').hide();
        $.ajaxSetup({ cache: false });
        dialog = $("#editContact").dialog({
            autoOpen: false,
            resizable: false,
            closeOnEscape: true,
            show: "explode",
            hide: "explode",
            width: 300,
            title: "Edit Contact",
            buttons: {
                Update: function () {
                    var contact = {
                        Name: $('#Name').val(),
                        Email: $('#Email').val(),
                        Phone: $('#Phone').val()
                    };

                    if ($('#Name').val() == '') {
                        alert('Please enter contact name');
                        return;
                    }

                    $.ajax({
                        url: '/Api/Contacts/' + $('#Id').val(),
                        type: 'PUT',
                        data: JSON.stringify(contact),
                        contentType: "application/json;charset=utf-8",
                        success: function (data) {
                            GetContacts();
                        },
                        error: function (data) {
                            alert('Problem in updating contacts:' + data.responseText);
                        }
                    });

                    $(dialog).dialog("close");
                },
                Cancel: function () {
                    $(dialog).dialog("close");
                }
            }
        });
    });

 
    function GetContacts() {
        $.ajax({
            url: '/Home/ContactsGrid',
            type: "GET",
            success: function (response) {
                $("#contactsGrid").html(response);
            },
            error: function (data) {
                $("#contactsGrid").html(data.responseText);
            }
        });
    }  

    function AddContact() {

        if ($('#Name_Create').val() == '') {
            alert('Please enter contact name');
            return;
        }

        var contact = {
            Name: $('#Name_Create').val(),
            Email: $('#Email_Create').val(),
            Phone: $('#Phone_Create').val()
        };

        $.ajax({
            url: '/Api/Contacts',
            type: 'POST',
            data: JSON.stringify(contact),
            contentType: "application/json;charset=utf-8",
            success: function (data) {
                alert('Contacts added successfully');
                GetContacts();
            },
            error: function (data) {
                alert('Problem in adding contacts:' + data.responseText);
            }
        });
    }

    function EditContact(id) {
        $.ajax({
            url: '/Home/GetContactsById/' + id,
            type: "GET",
            success: function (response) {
                $("#editContact").html(response);               
            },
            error: function (data) {
                $("#editContact").html(data.responseText);
            }
        });

        $(dialog).dialog('open')
    }

    function DeleteContact(id) {       
        $.ajax({
            url: '/Api/Contacts/'+ id,
            type: 'DELETE',
            success: function (data) {
                GetContacts();
            },
            error: function (data) {
                alert('Problem in deleting contacts:' + data.responseText);
            }
        });
    }
</script>